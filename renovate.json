{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "kubernetes": {
    "fileMatch": [
      "\.yaml$"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": [
        "\.mise\.toml$"
      ],
      "matchStrings": [
        "helm upgrade --install (?<depName>.*?) (?<packageName>.*?) --version (?<currentValue>.*?)( |\n)"
      ],
      "datasourceTemplate": "helm"
    }
  ]
}
